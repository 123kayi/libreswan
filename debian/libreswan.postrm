#!/bin/sh
set -e

if [ "$1" = "purge" ] ; then
    # clean up NSS database and any autogenerated secrets (see
    # "Location of NSS db" in debian/TODO and
    # debian/patches/0004-ipsec-newhostkey-default-to-etc-ipsec.d-newhostkey-g.patch
    # for more details)
    rm -f \
       /etc/ipsec.d/cert9.db \
       /etc/ipsec.d/key4.db \
       /etc/ipsec.d/pkcs11.txt \
       /etc/ipsec.d/newhostkey-generated.secrets
fi

#DEBHELPER#
